@model RestAPICSharp.Models.PayerModel
@{
    ViewBag.Title = "Token";
}

@using (Html.BeginForm())
{
   
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Get pVerify Payers List</h3>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-12">
           <h3>Request Headers</h3> 
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
<div class="row">
    <div class="col-md-2">
        Authorization
    </div>
    <div class="col-md-1">
     Bearer [token]
       
    </div>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.Token, "", new { @class = "form-control" })
    </div>
    <div class="col-md-3">
    </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-2">
          Client-User-Name
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ClientUserName, "", new { @class = "form-control" })

        </div>
       
        <div class="col-md-6">
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-2">
            Client-Password
        </div>
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ClientPassword,  new { @class = "form-control" })

        </div>
        
        <div class="col-md-6">
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-2">
           Request Body
        </div>
        <div class="col-md-4">
           No body prameters

        </div>

        <div class="col-md-6">
        </div>
    </div>
  <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-4">
            <input type="submit" value="Get Payers" class="btn btn-default" />
        </div>
        <div class="col-md-6">

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>API Response</h3>
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-2">
            Status Code
        </div>
        <div class="col-md-1">
            <b>    @( (int)Model.StatusCode) </b>
            </div>
            <div class="col-md-9">
                <b>   @Model.StatusCode.ToString()</b>
            </div>

    </div>
    <div class="clearfix">&nbsp;</div>
<div class="row">
    <div class="col-md-2">
     Response
    </div>
    <div class="col-md-8">
  

         @Html.TextAreaFor(m => m.ApiResponse, new  {style = "border-style:Solid;font-family:Courier New;font-size:8pt;height:400px;background-color: white;max-width:700px" ,cols=120,rows=15})
    </div>
  
      <div class="col-md-2">
          @*<button onclick="prettyPrint()">Pretty Print</button>*@
  </div>
    <div id="divRes" style="display:none">
        @Model.ApiResponse
    </div>
</div>
}

